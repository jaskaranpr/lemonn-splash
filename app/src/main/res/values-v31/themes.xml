<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="android:statusBarColor">#00FF00</item>
        <item name="backgroundColor">#0000FF</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/new_padding_4</item>
        <item name="windowSplashScreenIconBackgroundColor">#6EFFE8</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@layout/splash_screen</item>
    </style>
</resources>